<div class="container">
  <div class="jumbotron-fluid text-center mt-1 bg-">
    <h1>Eat-Da-Burgers!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col md-4">
      <h2>Ready to Eat!</h2>

      <ul>
        {{#each burgers}} 
          {{#unless devoured}} 
            {{> burgers/burger-block devoured=false}} 
          {{/unless}} {{/each}}
      </ul>
      </div>

    <div class="col md-4">
      <img src="/assets/images/hamburger.jpg">
    </div>

      <div class="col md-4">
      <h2>Burgers already devoured</h2>

      <ul>
        {{#each burgers}} 
        {{#if devoured}} 
          {{> burgers/burger-block devoured=true}} 
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col sm-12">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="addBurger">Burger Name:</label>
          <input type="text" id="addBurger" name="burgerName">
        </div>

        <button type="submit">Add Burger</button>
      </form>

    </div>
  </div>

</div>
